<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HueWheel">
        <attr name="hw_wheel_width" format="dimension" />
        <attr name="hw_finder_height" format="dimension" />
        <attr name="hw_finder_ledge" format="dimension" />
        <attr name="hw_finder_stroke" format="color|reference" />
        <attr name="hw_finder_stroke_width" format="dimension" />
        <attr name="hw_finder_corner_radius" format="dimension" />
        <attr name="hw_hue" format="float" />
    </declare-styleable>
    <attr name="HueWheelStyle" format="reference" />

    <declare-styleable name="SaturationValuePanel">
        <attr name="svp_pointer_size" format="dimension" />
        <attr name="svp_pointer_stroke_width" format="dimension" />
        <attr name="svp_pointer_stroke" format="color|reference" />
        <attr name="svp_hue" format="float" />
        <attr name="svp_saturation" format="float" />
        <attr name="svp_value" format="float" />
    </declare-styleable>
    <attr name="SVPanelStyle" format="reference" />

    <declare-styleable name="ColorSeekBar">
        <attr name="csb_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="csb_finder_size" format="dimension" />
        <attr name="csb_color_start" format="color" />
        <attr name="csb_color_end" format="color" />
    </declare-styleable>

    <declare-styleable name="ColorPreview">
        <attr name="cp_old_color" format="color" />
        <attr name="cp_new_color" format="color" />
    </declare-styleable>
</resources>